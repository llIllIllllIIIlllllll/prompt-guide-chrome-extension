{
  "manifest_version": 3,
  "name": "Prompt Guide Assistant",
  "version": "1.0",
  "description": "Chrome extension that helps modify and improve prompts according to best practices",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Guide Assistant"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}